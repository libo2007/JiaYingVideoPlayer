<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="3dp"
              tools:context="com.jiaying.videoplayer.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="ImageLoader"/>

            <com.jiaying.videoplayer.lib.JCVideoPlayerStandard
                android:id="@+id/videocontroller1"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Glide"/>

            <com.jiaying.videoplayer.lib.JCVideoPlayerStandard
                android:id="@+id/videocontroller2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Picasso"/>

            <com.jiaying.videoplayer.lib.JCVideoPlayerStandard
                android:id="@+id/videocontroller3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Volley"/>

            <com.jiaying.videoplayer.lib.JCVideoPlayerStandard
                android:id="@+id/videocontroller4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Fresco"/>

            <com.jiaying.videoplayer.lib.JCVideoPlayerStandard
                android:id="@+id/videocontroller5"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
